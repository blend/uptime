<h4>Pagerduty Options</h4>
<fieldset>
  <div class="control-group">
    <label class="control-label" for="check[pagerduty_options][send_alerts]">Send alerts to Pagerduty?</label>
    <div class="controls">
        <input type="checkbox" name="check[pagerduty_options][send_alerts]" <%= !!pagerduty_options.send_alerts ? "checked" : "" %> /> 
    </div>
  </div>
</fieldset>
